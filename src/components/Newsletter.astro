    @keyframes levitate {
    0% {
      transform: translateY(0);
    }
    30% {
      transform: translateY(-10px);
    }
    50% {
      transform: translateY(4px);
    }
    70% {
      transform: translateY(-15px);
    }
    100% {
      transform: translateY(0);
