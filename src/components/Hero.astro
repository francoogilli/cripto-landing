---
import PlayStore from '../icons/PlayStore.astro';
import Apple from '../icons/Apple.astro';
---

<div class="grid grid-cols-1 md:grid-cols-2">
    <div class="flex flex-col justify-center items-center md:items-start">
        <h1 class="text-5xl font-black sm:text-7xl text-white">The largest
            NFT marketplace
            in the world
        </h1>
    <div class="flex flex-row gap-x-2 mt-10 pb-5">
        
        <div class="grid grid-cols-10 text-xl  justify-center items-center px-3 
                    py-1 bg-[#0B090D] rounded-2xl border-2 border-[#1F1B26] text-white
                    hover:scale-105 hover:bg-[#1F1B26] cursor-pointer transition duration-300">
            <div class="col-span-3">
                <PlayStore />
            </div>
            <div class="col-span-7">
                <p class="text-xs font-thin uppercase">Get it on</p>
                <p class="font-semibold">Google Play</p>
            </div>
        </div>

        <div class="grid grid-cols-10 text-xl  justify-center items-center px-3 
                    py-1 bg-[#0B090D] rounded-2xl border-2 border-[#1F1B26] text-white
                    hover:scale-105 hover:bg-[#1F1B26] cursor-pointer transition duration-300">
            <div class="col-span-3">
                <Apple />
            </div>
            <div class="col-span-7">
                <p class="text-xs font-thin">Download on the</p>
                <p class="font-semibold">App Store</p>
            </div>
        </div>
    </div>
    </div>
    <div class="flex justify-center">
        <img src="/hero.svg" width="500" alt="">
    </div>
</div>