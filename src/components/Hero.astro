    ---
    import PlayStore from '../icons/PlayStore.astro';
    import Apple from '../icons/Apple.astro';
    ---

    <div class="grid grid-cols-1 md:grid-cols-2">
        <div class="flex flex-col justify-center items-center md:items-start">
            <h1 class="text-5xl font-black sm:text-6xl text-white">The largest
                NFT marketplace
                in the world
            </h1>
        <div class="flex flex-row lg:gap-x-4 mt-10 pb-5">
            
            <div class="grid grid-cols-10 text-xl  justify-center items-center px-3 
                        py-1 bg-[#0B090D] rounded-2xl border-2 border-[#1F1B26] text-white
                        hover:scale-105 hover:bg-[#1F1B26] cursor-pointer transition duration-300">
                <div class="col-span-3">
                    <PlayStore />
                </div>
                <div class="col-span-7">
                    <p class="text-xs font-thin uppercase">Get it on</p>
                    <p class="font-semibold text-lg">Google Play</p>
                </div>
            </div>

            <div class="grid grid-cols-10 text-xl  justify-center items-center px-3 
                        py-1 bg-[#0B090D] rounded-2xl border-2 border-[#1F1B26] text-white
                        hover:scale-105 hover:bg-[#1F1B26] cursor-pointer transition duration-300">
                <div class="col-span-3">
                    <Apple />
                </div>
                <div class="col-span-7">
                    <p class="text-xs font-thin">Download on the</p>
                    <p class="font-semibold text-lg">App Store</p>
                </div>
            </div>
        </div>
        </div>
        <div class="flex justify-center">
            <img src="/hero.svg" width="500" alt="">
        </div>
    </div>
    <div class="slide-container  -rotate-[4deg] bg-[#7F35FF] text-white text-center">
        <div class="slide-text-right py-4">
            <img src="/20crypto.png" width="300" alt="">
            <img src="/20crypto.png" width="300" alt="">
            <img src="/20crypto.png" width="300" alt="">
            <img src="/20crypto.png" width="300" alt="">
            <img src="/20crypto.png" width="300" alt="">
        </div>
    </div>
    <div class="slide-container relative bottom-[63px] bg-[#388BFF] rotate-[4deg] text-white text-center">
        <div class="slide-text-left py-4">
            <img src="/30crypto.png" width="300" alt="">
            <img src="/30crypto.png" width="300" alt="">
            <img src="/30crypto.png" width="300" alt="">
            <img src="/30crypto.png" width="300" alt="">
            <img src="/30crypto.png" width="300" alt="">
        </div>
    </div>

    <style>
.slide-container {
    width: 100%;
    overflow: hidden;
}

.slide-text-right {
    display: flex; 
    white-space: nowrap;
    animation: slideRight 40s linear infinite; /* Ajusta la duración de la animación */
}
.slide-text-left {
    display: flex; 
    white-space: nowrap;
    animation: slideLeft 40s linear infinite; /* Ajusta la duración de la animación */
}

.slide-text img {
    margin-right: 20px; /* Espacio entre las imágenes */
}

@keyframes slideLeft {
    0% {
        transform: translateX(0%);
    }
    100% {
        transform: translateX(-100%); /* Desplaza la imagen completamente fuera de la vista */
    }
}
@keyframes slideRight {
    0% {
        transform: translateX(0%);
    }
    100% {
        transform: translateX(100%); /* Desplaza la imagen completamente fuera de la vista */
    }
}

    </style>