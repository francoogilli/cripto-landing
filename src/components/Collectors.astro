---
import {CollectorsData} from "../data"
import Chevron from "../icons/Chevron.astro"
---

<section class="pt-10">
    <p class="text-[#7F35FF] text-lg">This week</p>
<div class="flex sm:flex-row justify-between flex-col">
    <div class="flex flex-col">
        <h2 class="text-white font-bold text-3xl">Top Collectors</h2>
    </div>
    <div class="pt-5 md:pt-0">
        <button class="text-white font-semibold w-full bg-black rounded-full px-3.5 py-1 border-2 border-[#2A2533]">This week</button>
    </div>
</div>
{
    CollectorsData.map(({ username, name, percentage, eth }) => (
    <div class="pt-10 flex justify-between">
    <div class="flex justify-center gap-x-4">
        <img src="/Avatar.svg" alt="">
        <div class="flex flex-col">
            <p class="text-white font-semibold">{name}</p>
            <p class="text-[#7F35FF] font-medium">{username}</p>
        </div>
    </div>
    <div class="flex items-end flex-col">
        <p class="text-white font-semibold flex justify-center items-center gap-x-2">{percentage} ETH <span><img src="/eth.svg" alt=""></span></p>
        <p class="text-[#EF4870] text-sm font-medium flex justify-center items-center"><Chevron />{eth}%</p>
    </div>
</div>
    ))
}

</section>